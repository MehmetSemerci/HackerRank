#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    int n,i,a;
	float pp,nene,zz,p=0,ne=0,z=0; 
    scanf("%d",&n);
    
    for(i = 0;i < n;i++){
       scanf("%d",&a);
       if(a<0){
       	ne+=1;
       }
       else if(a>0){
       	p+=1;
       }
       else{
       	z+=1;
       }
    }
    pp=p/n;
    nene=ne/n;
    zz=z/n;
    printf("%.6f\n",pp);
    printf("%.6f\n",nene);
    printf("%.6f\n",zz);
    return 0;
}
